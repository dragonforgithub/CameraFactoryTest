<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.example.cameratest"
      android:versionCode="1"
      android:versionName="1.0">
      
    
    <uses-sdk android:minSdkVersion="14" />
    
    <!-- We will request access to the camera, saying we require a camera
         of some sort but not one with autofocus capability. -->

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.FLASHLIGHT"/>
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" android:required="false" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />


    <application android:icon="@drawable/icon" android:label="@string/app_name">
	
		<activity android:name="com.example.cameratest.MainActivity" android:label="@string/app_name"
		    android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize">

			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>

		</activity>

		<receiver android:name="com.example.cameratest.CamReceiver" android:enabled="true">
             
            <intent-filter>
                
                 <action android:name="asus.camera.autofocus" />
                 <action android:name="asus.camera.setsavepath" />
                 <action android:name="asus.camera.setparameter" />
                 <action android:name="asus.camera.takepicture" />
                 <action android:name="asus.camera.iso" />
                 <action android:name="asus.camera.setexptime" />

            </intent-filter>
           
		</receiver>

    </application>
</manifest>